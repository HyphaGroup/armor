{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schema.threatmodel.civil/mission.schema.json",
  "title": "Mission and Impact Framework",
  "description": "Organization mission context and impact area definitions",
  "type": "object",
  "required": ["mission_statement", "impact_areas"],
  "properties": {
    "mission_statement": {
      "type": "string",
      "description": "Brief statement of organizational mission and purpose"
    },
    "core_activities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["activity", "description"],
        "properties": {
          "activity": {
            "type": "string",
            "description": "Name of core activity/program"
          },
          "description": {
            "type": "string",
            "description": "What this activity involves"
          },
          "criticality": {
            "type": "string",
            "enum": ["essential", "important", "supporting"],
            "description": "How critical to mission fulfillment"
          },
          "stakeholders": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Who depends on or is involved in this activity"
          }
        }
      },
      "description": "Key activities/programs the organization conducts"
    },
    "impact_areas": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["area", "priority", "description"],
        "properties": {
          "area": {
            "type": "string",
            "enum": [
              "safety_security",
              "mission_delivery",
              "trust_reputation",
              "financial_resources",
              "legal_compliance",
              "partner_relations"
            ],
            "description": "Impact area category"
          },
          "priority": {
            "type": "integer",
            "minimum": 1,
            "maximum": 6,
            "description": "Priority ranking (1 = highest)"
          },
          "description": {
            "type": "string",
            "description": "What this impact area means for this organization"
          },
          "high_impact_threshold": {
            "type": "string",
            "description": "What would constitute HIGH impact in this area"
          },
          "medium_impact_threshold": {
            "type": "string",
            "description": "What would constitute MEDIUM impact in this area"
          },
          "low_impact_threshold": {
            "type": "string",
            "description": "What would constitute LOW impact in this area"
          }
        }
      },
      "description": "Impact areas ranked by organizational priority"
    },
    "mission_failure_scenarios": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "What would mission failure look like? Examples of worst-case outcomes."
    },
    "key_relationships": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "relationship_type": {
            "type": "string",
            "enum": ["beneficiary", "donor", "partner", "coalition", "government", "media", "other"]
          },
          "description": {
            "type": "string"
          },
          "sensitivity": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "How sensitive is this relationship (would harm to it impact mission?)"
          }
        }
      },
      "description": "Key external relationships the organization depends on"
    },
    "support_network": {
      "type": "object",
      "description": "Security support resources available to the organization",
      "properties": {
        "peer_organizations": {
          "type": "object",
          "properties": {
            "identified": { "type": "boolean" },
            "contact_established": { "type": "boolean" },
            "intel_sharing_active": { "type": "boolean" },
            "notes": { "type": "string" }
          },
          "description": "Peer orgs facing similar threats who can share information"
        },
        "legal_support": {
          "type": "object",
          "properties": {
            "identified": { "type": "boolean" },
            "contact_established": { "type": "boolean" },
            "retainer_or_agreement": { "type": "boolean" },
            "contact_info": { "type": "string" }
          },
          "description": "Legal support for security-related issues"
        },
        "digital_security_support": {
          "type": "object",
          "properties": {
            "identified": { "type": "boolean" },
            "type": {
              "type": "string",
              "enum": ["internal_staff", "consultant", "helpline", "none"]
            },
            "contact_info": { "type": "string" }
          },
          "description": "Digital security expertise available"
        },
        "it_support": {
          "type": "object",
          "properties": {
            "identified": { "type": "boolean" },
            "type": {
              "type": "string",
              "enum": ["internal_staff", "contractor", "volunteer", "none"]
            },
            "response_time": { "type": "string" }
          },
          "description": "Technical IT support capability"
        },
        "communications_support": {
          "type": "object",
          "properties": {
            "identified": { "type": "boolean" },
            "crisis_comms_capability": { "type": "boolean" },
            "notes": { "type": "string" }
          },
          "description": "PR/comms support for incident response"
        },
        "mental_health_support": {
          "type": "object",
          "properties": {
            "identified": { "type": "boolean" },
            "type": {
              "type": "string",
              "enum": ["eap", "therapist", "peer_support", "none"]
            },
            "notes": { "type": "string" }
          },
          "description": "Mental health resources for staff"
        },
        "platform_contacts": {
          "type": "object",
          "properties": {
            "have_direct_contacts": { "type": "boolean" },
            "platforms_covered": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "description": "Direct contacts at social media platforms for escalation"
        },
        "emergency_contacts_documented": {
          "type": "boolean",
          "description": "Is there a documented list of who to call for different incident types?"
        }
      }
    }
  }
}
